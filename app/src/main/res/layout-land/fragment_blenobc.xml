<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llActivityBlenobc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/tvDataNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="текущее знач."
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvDataNowValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tvMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="макс. за мин"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvMaxValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tvAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="Среднее за мин"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvAverageValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDisperion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Дисперсия"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvDisperionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linearChartGraph1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>